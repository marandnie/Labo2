#include <stdio.h>

int main() {
    int edad;

    // Solicitar al usuario ingresar su edad
    printf("Ingresa tu edad: ");
    scanf("%d", &edad);

    // Categorizar la edad
    if (edad < 12) {
        printf("Eres un niÃ±o.\n");
    } else if (edad >= 12 && edad <= 18) {
        printf("Eres un adolescente.\n");
    } else {
        printf("Eres un adulto.\n");
    }

    return 0;
}
